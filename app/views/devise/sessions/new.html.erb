<div class="login-form">
  <div class="loginPart signupPart content">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal text-center"}) do |f| %>
            <h1>Log In</h1>
            <div class="form-group">
              <div class="col-sm-12">
                <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
                <img src="/icons/username.png"/>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <%= f.password_field :password, class: "form-control", placeholder: "Password", "data-toggle" => "tooltip", "data-placement" => "bottom", title: flash_messages_content  %>
                <img src="/icons/password.png" />
              </div>
            </div>
            <div class="form-group">
              <% if devise_mapping.rememberable? %>
                <div class="col-md-6 col-xs-12 text-left">
                  <%= f.check_box :remember_me %>
                  <label class="customCheckbox" for="user_remember_me">Remember me</label>
                </div>
              <% end %>
              <div class="col-md-6 col-xs-12 text-right">
                <button class="btn btn-ms btn-mc text-uppercase" id="btnLoginDevise" type="submit">Log in</button>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12 text-left">
                <span class="footer-link">
                  <%= link_to "Sign up", new_user_registration_path(resource) %>
                  |
                  <%= link_to "Forgot your password", new_password_path(resource) %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
