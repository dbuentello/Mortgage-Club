<div class="user-change-password-form">
  <div class="signupPart content">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-horizontal text-center", method: :put }) do |f| %>

            <%= f.hidden_field :reset_password_token %>

            <div class="form-group">
              <div class="col-sm-12">
                <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "Password" %>
                <img src="/icons/password.png" alt="title"/>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-12">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password confirmation", "data-toggle" => "tooltip", title: resource.errors.full_messages.first%>
                <img src="/icons/passwordconfirm.png" alt="title" />
              </div>
            </div>

            <div class="form-group">
              <%= f.button "Change", type: "submit", class: "btn text-uppercase theBtn", id: "btnChangePassword" %>
              <h5>
                <%= link_to "Log in", new_user_session_path %>
                |
                <%= link_to "Sign up", new_user_registration_path(resource) %>
              </h5>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script type="text/javascript">
  $(function() {

    $("[data-toggle='tooltip']").tooltip({
      placement: "left",
      trigger: "manual"
    }).tooltip("show");
  })
</script>

