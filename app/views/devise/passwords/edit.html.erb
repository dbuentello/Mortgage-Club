<div class="user-change-password-form reset-password-form">
  <div class="signupPart content">
    <div class="container">
      <div class="row text-center">
        <h1>Your security is important to us</h1>
        <p class="forgot-password-info">Please change your password</p>
        <div class="col-md-4 col-md-offset-4">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-horizontal text-center", method: :put }) do |f| %>

            <%= f.hidden_field :reset_password_token %>
            <div class="form-group">
              <div class="col-sm-12">
                <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "Password" %>
                <img src="/icons/password.png" alt="title"/>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-12">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password confirmation", "data-toggle" => "tooltip", "data-placement" => "bottom", title: resource.errors.full_messages.first%>
                <img src="/icons/passwordconfirm.png" alt="title" />
              </div>
            </div>

            <div class="form-group">
              <%= f.button "Submit", type: "submit", class: "btn text-uppercase btn-mc", id: "btnChangePassword" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
