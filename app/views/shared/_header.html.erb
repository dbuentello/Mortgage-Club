<div class="header clearfix shadowBottom">
  <div class="container">
    <nav class="collapse navbar-collapse mortgageNav">
      <div class="navbar-header">
        <a class="navbar-brand logo" href="/"><%= image_tag asset_path("mortgageclubLOGO.png")%></a>
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#links-home" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse mortgageNav" id="links-home">
        <ul class="nav nav-pills navbar-right">
          <% if current_user %>
            <li><a id="newLoanBtn" class="btn btn-ms btn-success theBtn text-uppercase" data-toggle="modal" data-target="#newLoan"><p><span class="glyphicon glyphicon-plus-sign"></span>  new loan</p></a></li>
            <% is_active_loans_menu = 'active-loans' if controller.controller_name == 'loans' %>
            <li>
              <%= link_to my_loans_path, class: "btn btn-ms theBtn text-uppercase #{is_active_loans_menu}", id: "loanBtn" do %>
                <%= image_tag asset_path("/icons/loanBtn.png"), id: "loanBtnImg" %>
                Loans
              <% end %>
            </li>
            <li>
              <div class="dropdown">
                <button class="btn btn-default dropdown-toggle theBtn" id="accountBtn" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                <span>
                  <img id="accountBtnImg" src="/icons/userBtn.png" atl="account"></img>
                </span>
                <span><%= current_user.first_name %></span>
                <span>
                  <img class="dropdownArrow" src="/icons/dropdownArrow.png" alt="arrow"/>
                </span>
                </button>
                <ul class="dropdown-menu" aria-labelledby="accountBtn">
                  <li><%= link_to "My Profile", edit_user_registration_path(current_user) %></li>
                  <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %>
                </ul>
              </div>
            </li>
          <% else %>
            <li>
              <%= link_to new_user_session_path, class: "btn btn-ms btn-success theBtn text-uppercase", id: "loginBtn" do %>
                <%= image_tag image_path("loginICON.png"), id: "loginImg" %>Log in
              <% end %>
            </li>
            <li>
              <%= link_to "Find my rate", new_user_registration_path, class: "btn btn-ms theBtn text-uppercase", id: "signupBtn"%>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</div>
