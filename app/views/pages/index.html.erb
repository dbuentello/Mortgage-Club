          <% if Rails.env.production? %>
            <a id="applyBtn" class="btn btn-lg theBtn text-uppercase col-md-offset-4" href="http://www.mortgageclub.io/loans/cd70d96b-3902-44dd-a840-9ef762aa96a2/edit" role="button">find my rate</a>
          <% else %>
            <a id="applyBtn" class="btn btn-lg theBtn text-uppercase col-md-offset-4" href="/signup" role="button">find my rate</a>
          <% end %>
        </div>

        <div id="home-right" class="col-md-6 rates">
          <div id="home-right-header">
            <h1 class="text-uppercase">
              MORTGAGE RATES
              <%= image_tag("info.png", class: 'info-button', "data-toggle" => "tooltip", "data-placement" => "right", title:"We haven’t launched yet but if we were live today, we’d offer these rates. Rates are displayed in APRs which reflect interest rate as well as broker fees, discount points and some closing costs. BTW, our competitors’ rates are real too!") %>
            </h1>
            <p class="">(as of <%= @last_updated %>)</p>
          </div>

          <table class="table homeTable">
            <tr class="table-header">
              <td>Programs</td><td>Mortgage Club</td><td>Wells Fargo</td><td>Quicken Loans</td>
            </tr>
            <tr>
              <td>30 Year Fixed<hr/></td>
              <td><%= sprintf('%.3f', @mortgage_aprs['zillow']['apr_30_year']) %>%<hr/></td>
              <td><%= sprintf('%.3f', @mortgage_aprs['wells_fargo']['apr_30_year']) %>%<hr/></td>
              <td><%= sprintf('%.3f', @mortgage_aprs['quicken_loans']['apr_30_year']) %>%<hr/></td>
            </tr>
            <tr>
              <td>15 Year Fixed<hr/></td>
              <td><%= sprintf('%.3f', @mortgage_aprs['zillow']['apr_15_year']) %>%<hr/></td>
              <td><%= sprintf('%.3f', @mortgage_aprs['wells_fargo']['apr_15_year']) %>%<hr/></td>
              <td><%= sprintf('%.3f', @mortgage_aprs['quicken_loans']['apr_15_year']) %>%<hr/></td>
            </tr>
            <tr>
              <td>5/1 Libor ARM<hr/></td>
              <td><%= sprintf('%.3f', @mortgage_aprs['zillow']['apr_5_libor']) %>%<hr/></td>
              <td><%= sprintf('%.3f', @mortgage_aprs['wells_fargo']['apr_5_libor']) %>%<hr/></td>
              <td><%= sprintf('%.3f', @mortgage_aprs['quicken_loans']['apr_5_libor']) %>%<hr/></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>

