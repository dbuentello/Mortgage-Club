<div class="homepage">
  <div class="header clearfix">
    <div class="container">
      <nav class="navbar navbar-default mortgageNav">
        <div class="navbar-header">
        <a class="navbar-brand logo" href="#">
          <%= image_tag("mortgageclubLOGO.png") %>
        </a>
